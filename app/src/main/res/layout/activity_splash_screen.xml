<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.acheiAqui.View.SplashScreenActivity">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/splash_screen_background"
        style="@style/SplashScreenTheme"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_splash_screen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/splash_screen_foreground"
            />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>