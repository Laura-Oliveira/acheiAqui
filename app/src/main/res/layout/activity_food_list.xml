<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterFoodListActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/registered_shop"
        android:text="@string/registerfood_shop"
        android:textSize="14pt"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/registerfoods_shop"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:hint="@string/hint_food_list"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:background="@color/button"
            android:text="@string/action_register"
            android:textColor="@color/cor_texto_button"
            android:textSize="10pt"
            android:textStyle="bold"
            android:onClick="registerShop"/>
    </RelativeLayout>
</LinearLayout>