<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterShopActivity">

    <LinearLayout
        android:id="@+id/cadastro_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/name_shop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/name_shop"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/cor_texto"
            android:textColorHint="@color/cor_texto" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/reference_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/reference_point"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/cor_texto"
            android:textColorHint="@color/cor_texto" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <AutoCompleteTextView
            android:id="@+id/shop_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/shop_color"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/cor_texto"
            android:textColorHint="@color/cor_texto" />

    </android.support.design.widget.TextInputLayout>


    <RadioGroup
    android:id="@+id/radioButtonGroup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RadioButton
    android:id="@+id/radioClient"
    android:layout_width="330dp"
    android:layout_height="40dp"
    android:text="@string/fixed_shop"
    android:textSize="12pt"
    android:textStyle="bold"
    android:textColor="@color/cor_texto_button"
    android:background="@color/colorPrimaryDark"
    android:layout_marginTop="20dp"
    />

    <RadioButton
    android:id="@+id/radioShop"
    android:layout_width="330dp"
    android:layout_height="40dp"
    android:text="@string/mobile_shop"
    android:textSize="12pt"
    android:textStyle="bold"
    android:textColor="@color/cor_texto_button"
    android:background="@color/colorPrimaryDark"
    android:layout_marginTop="20dp"
    />

    </RadioGroup>

    <Button
        android:id="@+id/cadastrar"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/button"
        android:text="@string/action_register"
        android:textColor="@color/cor_texto_button"
        android:textStyle="bold" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>