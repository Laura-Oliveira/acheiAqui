<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterShopActivity"
    android:orientation="vertical">

        <EditText
            android:id="@+id/name_shop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/name_shop"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/cor_texto"
            android:textColorHint="@color/cor_texto" />

        <EditText
            android:id="@+id/reference_point"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/reference_point"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/cor_texto"
            android:textColorHint="@color/cor_texto" />

        <EditText
            android:id="@+id/shop_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/shop_color"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/cor_texto"
            android:textColorHint="@color/cor_texto"
            />

    
    <RadioGroup
    android:id="@+id/radioButtonGroup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RadioButton
    android:id="@+id/radioClient"
    android:layout_width="330dp"
    android:layout_height="40dp"
    android:text="@string/fixed_shop"
    android:textSize="12pt"
    android:textStyle="bold"
    android:textColor="@color/cor_texto_button"
    android:background="@color/colorPrimaryDark"
    android:layout_marginTop="20dp"
    />

    <RadioButton
    android:id="@+id/radioShop"
    android:layout_width="330dp"
    android:layout_height="40dp"
    android:text="@string/mobile_shop"
    android:textSize="12pt"
    android:textStyle="bold"
    android:textColor="@color/cor_texto_button"
    android:background="@color/colorPrimaryDark"
    android:layout_marginTop="20dp"
    />

    </RadioGroup>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:textSize="10pt"
        android:background="@color/button"
        android:text="@string/action_register"
        android:textColor="@color/cor_texto_button"
        android:textStyle="bold"
        android:onClick="onClickButton"
        android:layout_alignParentBottom="true"
        />

        </RelativeLayout>
</LinearLayout>