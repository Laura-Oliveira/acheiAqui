<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.acheiAqui.Control.RegisterLocationActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/registered_shop"
        android:text="@string/txt_register_location_shop"
        android:textSize="8pt"
        android:textColor="@color/color_black"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@color/backgroundColor"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:layout_weight="1"
        tools:context="com.acheiAqui.Control.RegisterLocationActivity" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_locationRegister"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:backgroundTint="@color/btn_color"
        android:text="@string/btn_register_next_page_shop"
        android:textColor="@color/btn_text_color"
        android:textStyle="bold"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        android:onClick="nextPageButtonFoodList"
        >
    </com.google.android.material.button.MaterialButton>

</androidx.appcompat.widget.LinearLayoutCompat>

